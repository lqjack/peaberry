<assembly>
  <id>dist</id>
  <formats>
    <format>zip</format>
  </formats>
  <moduleSets>
    <moduleSet>
      <excludes>
        <exclude>*.extensions:*</exclude>
      </excludes>
      <binaries>
        <unpack>false</unpack>
        <dependencySets>
          <dependencySet>
            <useProjectAttachments>true</useProjectAttachments>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <includes>
              <include>*sources</include>
              <include>*javadoc</include>
            </includes>
            <excludes>
              <exclude>*asc</exclude>
            </excludes>
          </dependencySet>
        </dependencySets>
      </binaries>
    </moduleSet>
    <moduleSet>
      <includes>
        <include>*.extensions:*</include>
      </includes>
      <binaries>
        <outputDirectory>extensions</outputDirectory>
        <unpack>false</unpack>
        <dependencySets>
          <dependencySet>
            <useProjectAttachments>true</useProjectAttachments>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <includes>
              <include>*sources</include>
              <include>*javadoc</include>
            </includes>
            <excludes>
              <exclude>*asc</exclude>
            </excludes>
          </dependencySet>
        </dependencySets>
      </binaries>
    </moduleSet>
  </moduleSets>
</assembly>
