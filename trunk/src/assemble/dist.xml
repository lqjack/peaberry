<assembly>
  <id>dist</id>
  <formats>
    <format>zip</format>
  </formats>
  <moduleSets>
    <moduleSet>
      <excludes>
        <exclude>*extensions:*</exclude>
      </excludes>
      <binaries>
        <includeDependencies>false</includeDependencies>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
    <moduleSet>
      <includes>
        <include>*extensions:*</include>
      </includes>
      <excludes>
        <exclude>*:*test</exclude>
        <exclude>*:*invocations</exclude>
      </excludes>
      <binaries>
        <includeDependencies>false</includeDependencies>
        <outputDirectory>extensions</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
  </moduleSets>
</assembly>
